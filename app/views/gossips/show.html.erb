

<div class="container-fluid p-4" style="height: 300px">
  <h1 class="text-center mb-5"> </h1>
  <div class="row justify-content-around align-items-center">
    <div class="col-md-3">
      <div class="card text-center m-2">
        <div class="card-header">
          <h3> <%=  @gossip.title %> </h3>
        </div>
        <div class="card-body">
          <p class="card-text"> <%= @gossip.content %> </p>
          <p> by : <%=  link_to "#{@gossip.user.first_name}", user_path(@gossip.user_id) %> </p>
          <p> Localisation in : <%= @gossip.city.name %> </p>
          <div class="card-body">
          <button type="button" class="btn btn-warning"> <%=  link_to "Modify ?", edit_gossip_path(@gossip.id) %> </button>
          <a href="<%= gossip_path(@gossip.id)  %>" class="btn btn-danger" data-method="DELETE" > Supprimer ? </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>