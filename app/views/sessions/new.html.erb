

<div class="container-fluid p-4" style="height: 300px">
  <h1 class="text-center mb-5"> </h1>
  <div class="row justify-content-around align-items-center">
    <div class="col-md-3">
      <div class="card text-center m-2">
        <div class="card-header">
          <h3> Sign Up </h3>
        </div>
        <div class="card-body">
          <%= form_tag url_for(action: 'create'), method: "post" do %>


              <%=  label_tag 'Email' %>
              <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'email'  %>


            <p type="password" class="card-text">
              <%= label_tag 'Password' %>
              <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'password' %>
            </p>

            <%= submit_tag "Connexion ", {:class =>  'btn btn-info'}%>


          <% end %>
          </p>

        </div>
      </div>
    </div>
  </div>
</div>